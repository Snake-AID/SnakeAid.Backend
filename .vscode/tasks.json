{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "dockerHubUsername",
            "type": "promptString",
            "description": "Docker Hub Username",
            "default": "thekhiem7"
        },
        {
            "id": "imageTag",
            "type": "promptString",
            "description": "Image Tag (e.g., latest, v1.0.0)",
            "default": "latest"
        }
    ],
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SnakeAid.Api/SnakeAid.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/SnakeAid.Api/SnakeAid.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/SnakeAid.Api/SnakeAid.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "üê≥ Docker: Build Image",
            "type": "shell",
            "command": "docker build -t ${input:dockerHubUsername}/snakeaid-api:${input:imageTag} .",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "üê≥ Docker: Push to Hub",
            "type": "shell",
            "command": "docker push ${input:dockerHubUsername}/snakeaid-api:${input:imageTag}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "üê≥ Docker: Build & Push",
            "dependsOn": [
                "üê≥ Docker: Build Image",
                "üê≥ Docker: Push to Hub"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "üê≥ Docker: Login to Hub",
            "type": "shell",
            "command": "docker login",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}