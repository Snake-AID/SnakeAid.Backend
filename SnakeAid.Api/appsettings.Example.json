{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.SQLite",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Span"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithSpan"
    ],
    "Properties": {
      "Application": "SnakeAid.API"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Application} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "logs/logs.db",
          "tableName": "Logs",
          "storeTimestampInUtc": true
        }
      }
    ]
  },
  "Jwt": {
    "SecretKey": "mysuperlongsecretkeythatishard2guess123!",
    "RefreshSecretKey": "anotherultrasecretkeythatmustbe32chars!!",
    "RefreshExpirationInDays": "182",
    "Issuer": "YourIssuer",
    "Audience": "YourAudience",
    "ExpirationInMinutes": "60"
  },
  "ConnectionStrings": {
    "DefaultConnection": "hẹ hẹ hẹ",
    "SupabaseConnection": "hẹ hẹ hẹ"
  },
  "ApplyMigrations": false,
  "AllowedHosts": "*"
}
